# make sure you can use apt-add-repository
sudo apt install software-properties-common

# install neovim
sudo apt-add-repository ppa:neovim-ppa/stable
sudo apt-get update
sudo apt-get install neovim

# install vim-plug package manager
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# Need to create this folder to put init.vim into
if [ ! -d "~/.config/nvim" ]; then
  mkdir '~/.config/nvim'
fi

# Copy UltiSnips folder for nvim to load custom snippets
cp -r ./UltiSnips/ ~/.config/nvim/UltiSnips

# Need xclip for nvim to copy to clipboard
sudo apt install xclip

# Need a Nerd Font to use some plugins
# Also need to manually change terminal profile to use the Hack font
sudo apt install fonts-hack-ttf fonts-hack-otf fonts-powerline
